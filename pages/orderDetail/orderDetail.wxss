page{background: #e0e0e0;}

.detail-head-contain{background: #ff6600; width: 100%; position: fixed; top: 0; z-index: 1000;}
.detail-head-contain .detail-head-content{padding: 20rpx; color: #fff;}
.detail-head-contain .detail-head-content .detail-head-item{margin-bottom: 14rpx; font-size: 30rpx; line-height: 30rpx;}
.detail-head-contain .detail-head-content .order-number{font-size: 34rpx; line-height: 34rpx; font-weigth: bold;}
.detail-head-contain .detail-head-content .detail-head-item-right{float: right; font-size: 34rpx; line-height: 34rpx; font-weigth: bold; position: relative; bottom: 45rpx; z-index: 1001;}
.detail-head-contain .detail-sum{background: #ff822f; padding: 20rpx 0;}
.detail-head-contain .detail-sum .detail-sum-item{width: 25%; text-align: center; display: inline-block;}
.detail-head-contain .detail-sum .detail-sum-item .detail-sum-item-title{margin-bottom: 14rpx; font-size: 30rpx; line-height: 30rpx; color: #ffcaa6;}
.detail-head-contain .detail-sum .detail-sum-item .detail-sum-item-number{font-size: 30rpx; line-height: 30rpx; color: #fff;}

.detail-contain{padding-top: 506rpx; padding-bottom: 160rpx;}
.detail-contain .detail-content{background: #fff; padding: 12rpx 20rpx 20rpx; margin-bottom: 36rpx;}
.detail-contain .detail-content:last-child{margin-bottom: 0;}
.detail-contain .detail-content .detail-content-title{border-bottom: 1px solid #cccccc;}
.detail-contain .detail-content .detail-content-title .title{font-size: 32rpx; line-height: 56rpx; display: inline-block;}
.detail-contain .detail-content .detail-content-title .btn-open{float: right; width: 30rpx; height: 18rpx; position: relative; top: 18rpx;}
.detail-contain .detail-content .detail-item-content{width: 100%; display: inline-block;}
.detail-contain .detail-content .detail-item-content .detail-item{border-bottom: 1px dashed #cccccc; font-size: 30rpx; line-height: 44rpx; color: #666666;}
.detail-contain .detail-content .detail-item-content .detail-item:last-child{border-bottom: 0;}
.detail-contain .detail-content .detail-item-content .detail-item .name{color: #000;}
.detail-contain .detail-content .detail-item-content .detail-item .title{margin-right: 20rpx; display: inline-block;}
.detail-contain .detail-content .detail-item-content .detail-item .title.title-size{font-size: 11px;}
.detail-contain .detail-content .detail-item-content .detail-item .content{float: right; margin-right: 30rpx; text-align: right; z-index: 999; display: inline-block;}
.detail-contain .detail-content .detail-item-content .detail-item .remark{width: 500rpx;}
.detail-contain .detail-content .detail-item-content .detail-item .content-right{float: right; margin-right: 30rpx; text-align: right; position: relative; bottom: 20rpx; z-index: 999; display: inline-block;}
.detail-contain .detail-content .detail-item-content .detail-item .content-right-orange{float: right; margin-right: 0rpx; color: #ff6600; text-align: right; position: relative; bottom: 20rpx; z-index: 999; display: inline-block;}
.detail-contain .detail-content .detail-item-content .img{float: left; width: 166rpx; height: 166rpx; margin-top: 14rpx; margin-right: 14rpx; z-index: 999; display: inline-block;}
.detail-contain .detail-content .detail-item-content .img:nth-child(4n){margin-right: 0;}
.detail-contain .detail-content .detail-item-content .name .workShop-info{color: #666;}
.detail-contain .detail-content .detail-item-content .name .workShop{font-weight: bold;margin-right: 10rpx;}

.bg{background: #000; width: 100%; height: 100%; position: fixed; top: 0; z-index: 1002;}
.bg .big-img{width: 100%; height: 100%;}

.fixed-operation {display: flex;position: fixed;bottom: 0;width: 100%;background-color:#fff;height: 120rpx;z-index: 99999; border-top: 2rpx solid #ccc;}
.fixed-operation button {width: 180rpx;height: 70rpx; background-color: #f60;color: #fff;margin-top: 25rpx;font-size: 16px;line-height: 70rpx;}