page{background: #e0e0e0;}

.search-contain{background: #fff; width: 100%; height: 68rpx; padding: 14rpx; border-bottom: 1rpx solid #ccc; position: fixed; top: 0; z-index: 999; display: inline-block;}
.search-contain .search-filter{float: left; width: 140rpx; height: 68rpx; border: 1rpx solid #7a7a7a; display: inline-block;}
.search-contain .search-filter .text{padding:0 10rpx; font-size: 30rpx; line-height: 68rpx;}
.search-contain .search-content{float: left; width: 376rpx; height: 68rpx; padding:0 10rpx; border: 1rpx solid #7a7a7a; border-left: 0; font-size: 30rpx; line-height: 30rpx; text-align: left; display: inline-block;}
.search-contain .search-scan{float: left; width: 68rpx; height: 68rpx; margin-left: 6rpx; margin-right: 6rpx; display: inline-block;}
.search-contain .btn-search{float: left; width: 100rpx; background: #169bd5; padding: 18rpx 0; font-size: 30rpx; line-height: 30rpx; color: #fff; display: inline-block;}

.order-contain{padding: 115rpx 14rpx 14rpx;}
.order-contain .order-item{background: #fff; margin-bottom: 16rpx; border-radius: 14rpx;}
.order-contain .order-item:last-child{border-bottom: 0; margin-bottom: 0;}
.order-contain .order-item .order-title{background: #ff6600; padding: 22rpx 16rpx 18rpx; border-top-left-radius: 16rpx; border-top-right-radius: 16rpx; font-size: 32rpx; line-height: 32rpx; color: #fff;}
.order-contain .order-item .order-title .title{display: inline-block;}
.order-contain .order-item .order-title .btn-detail{float: right; display: inline-block;}
.order-contain .order-item .order-title .btn-detail .text{position: relative; bottom: 2rpx; right: 14rpx; display: inline-block;}
.order-contain .order-item .order-title .btn-detail .order-arrow{width: 16rpx; height: 26rpx;}
.order-contain .order-item .order-content{padding: 14rpx 16rpx; border-bottom: 1px solid #cccccc;}
.order-contain .order-item .order-content .order-content-item{margin-bottom: 2rpx; font-size: 30rpx; color: #666666;}
.order-contain .order-item .order-content .order-content-item-right{float: right; font-size: 32rpx; color: #ff6600; position: relative; bottom: 40rpx; display: inline-block; z-index: 998;}
.order-contain .order-item .order-footer{padding: 4rpx 16rpx 16rpx;}
.order-contain .order-item .order-footer .order-status{width: 120rpx; padding-top: 10rpx; font-size: 32rpx; color: #006699; display: inline-block;}
.order-contain .order-item .order-footer .order-number{float: left; width: calc(100% - 120rpx); height: 0; margin-left: 120rpx; position: relative; bottom: 46rpx; display: inline-block;}
.order-contain .order-item .order-footer .order-number .order-number-item{width: 33.3%; padding-top: 10rpx; font-size: 28rpx; line-height: 28rpx; color: #666666; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: inline-block;}

.no-data{background: #e0e0e0; border-bottom: 1rpx dashed #9b9b9b;}
.no-data .text{background: #e0e0e0; color: #9b9b9b;}